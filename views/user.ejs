<html lang="en">
<head>
    <%- include("./templates/head") -%>
</head>
<body>
    <h1>Profile</h1>
    <button onclick="location.href='/logout'">Logout</button>
    <p>username: <%= profile.username %></p>
    <h2>Posts:</h2>
        <% profile.posts.forEach(post => { %>
            <div>
                <span><%= post.title %></span>
                    <button onclick="location.href=`post/${<%= post.id %>}`">Read more</button>
            </div>
        <% }) %>

        <button onclick="location.href='user/delete'">Delete user</button>
</body>
</html>
